{
  "config": {
    "allow-plugins": {
      "automattic/jetpack-autoloader": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^7.4|^8.0",
    "ext-json": "*",
    "automattic/jetpack-autoloader": "^2.11",
    "cardanopress/framework": "^2.0",
    "league/csv": "^9.8"
  },
  "autoload": {
    "exclude-from-classmap": ["vendor/"],
    "psr-4": {
      "PBWebDev\\CardanoPress\\ISPO\\": "../src/",
      "CardanoPress\\ISPO\\Dependencies\\": "."
    }
  },
  "extra": {
    "mozart": {
      "dep_namespace": "CardanoPress\\ISPO\\Dependencies\\",
      "dep_directory": "/",
      "classmap_directory": "/classes/",
      "classmap_prefix": "CardanoPress_ISPO_Dependency_",
      "excluded_packages": [
        "automattic/jetpack-autoloader",
        "cardanopress/framework",
        "woocommerce/action-scheduler"
      ]
    }
  },
  "scripts": {
    "action-prefix": [
      "../vendor/bin/mozart compose",
      "composer dump-autoload --classmap-authoritative",
      "find . -type d -not \\( -path ./vendor -prune \\) -exec cp -f ./index.php {} \\;"
    ],
    "post-install-cmd": "@action-prefix",
    "post-update-cmd": "@action-prefix"
  }
}
